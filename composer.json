{
    "name": "anomaly/lexicon",
    "description": "An expressive template engine.",
    "keywords": ["template","engine","parser"],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Osvaldo Brignoni",
            "email": "obrignoni@anomaly.is"
        }
    ],
    "require-dev": {
        "henrikbjorn/phpspec-code-coverage": "~0.2",
        "phpspec/phpspec": "dev-master"
    },
    "suggest": {
        "illuminate/view": "Require illuminate/view ~5.0 if you are using this package outside of Laravel.",
        "illuminate/config": "Require illuminate/config ~5.0 if you are using this package outside of Laravel."
    },
    "config": {
        "bin-dir": "bin"
    },
    "autoload": {
        "psr-0": {
            "Anomaly\\Lexicon": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Anomaly\\Lexicon\\Stub\\": "resources/stub/"
        }
    },
    "minimum-stability": "dev",
    "extra": {
        "branch-alias": {
            "dev-master": "0.1.x-dev"
        }
    }
}
