{
    "name": "anomaly/lexicon",
    "description": "An expressive template engine.",
    "keywords": ["template","engine","parser"],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Osvaldo Brignoni",
            "email": "obrignoni@anomaly.is"
        }
    ],
    "require": {
        "illuminate/view": "~5.0",
        "illuminate/config": "~5.0",
        "illuminate/events": "~5.0"
    },
    "require-dev": {
        "codeclimate/php-test-reporter": "dev-master",
        "henrikbjorn/phpspec-code-coverage": "~0.2",
        "phpspec/phpspec": "2.1.0-RC1"
    },
    "config": {
        "bin-dir": "bin"
    },
    "autoload": {
        "psr-0": {
            "Anomaly\\Lexicon": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Anomaly\\Lexicon\\Stub\\": "tests/stub/"
        }
    },
    "minimum-stability": "dev",
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    }
}
